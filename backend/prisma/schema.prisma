// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// this file will connect to our database and will define the postgres database structure
generator client {
  provider = "prisma-client-js"
}

// connection to the postgres database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// creeating prisma model in the database
model User {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  age       Int
  gender    String?
  email     String   @unique
  race      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
